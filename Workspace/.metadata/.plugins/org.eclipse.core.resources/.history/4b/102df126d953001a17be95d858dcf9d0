#ifndef _LCD_H
#define _LCD_H
#ifdef __cplusplus
 extern "C" {
#endif

#include "i2c.h"

#define LCD_ADDRESS (0x20)		// 0x20, 0x3F, 0x27

extern void LCD_Clear(I2C_HandleTypeDef *hi2c);
extern void LCD_CursorOn(I2C_HandleTypeDef *hi2c);
extern void LCD_CursorOff(I2C_HandleTypeDef *hi2c);
extern void LCD_BacklightOn(I2C_HandleTypeDef *hi2c);
extern void LCD_BacklightOff(I2C_HandleTypeDef *hi2c);
extern void LCD_ResetCursor(I2C_HandleTypeDef *hi2c);
extern void LCD_SetCursor(I2C_HandleTypeDef *hi2c, uint8_t xPos, uint8_t yPos);
extern void LCD_PrintChar(I2C_HandleTypeDef *hi2c, uint8_t xPos, uint8_t yPos, uint8_t chr);
extern void LCD_PrintString(I2C_HandleTypeDef *hi2c, uint8_t xPos, uint8_t yPos, uint8_t* str);


#endif
